root = true

# All
[*]
charset = utf-8
insert_final_newline = true
max_line_length = off

# Java
[*.java]
indent_style = space
indent_size = 4

# Kotlin
[*.kt]
indent_style = space
indent_size = 4

# Gradle
[*.gradle]
indent_style = space
indent_size = 2

# Gradle Kotlin DSL
[*.kts]
indent_style = space
indent_size = 2

# Cfg
[*.cfg]
indent_style = space
indent_size = 4

# Xml
[*.xml]
indent_style = space
indent_size = 4

# Toml
[*.toml]
indent_style = space
indent_size = 3

# Json
[*.json]
indent_style = space
indent_size = 2

# Config
[*.config]
indent_style = space
indent_size = 2

# Conf
[*.conf]
indent_style = space
indent_size = 2

# Mc Meta
[*.mcmeta]
indent_style = space
indent_size = 2

# YAML
[*.yml]
indent_style = space
indent_size = 2

# Properties
[*.properties]
indent_style = space
indent_size = 0

# Text
[*.txt]
indent_style = space
indent_size = 0
